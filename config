# EC2_CERT = 
# EC2_PRIVATE_KEY =

[key ec2]
KEY_LOCATION=~/.ssh/ec2.rsa

[global]
DEFAULT_TEMPLATE=default
REFRESH_INTERVAL=10
WEB_BROWSER=firefox

##
## Defining Cluster Templates
##

[cluster default]
KEYNAME = ec2
CLUSTER_SIZE = 2
CLUSTER_USER = sgeadmin
CLUSTER_SHELL = bash 
