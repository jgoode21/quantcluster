NODE_INSTANCE_TYPE = m3.xlarge
PLUGINS = quant_cluster
#hadoop, hive

[cluster default_lts]
EXTENDS = default
NODE_IMAGE_ID = ami-765b3e1f

##
## Configuring StarCluster Plugins
##

[plugin quant_cluster]
SETUP_CLASS = quantcluster.plugins.quant_cluster

[plugin hadoop]
SETUP_CLASS = quantcluster.plugins.hadoop.Hadoop

[plugin hive]
SETUP_CLASS = quantcluster.plugins.hive.Hive

[plugin hbase]
SETUP_CLASS = quantcluster.plugins.hbase.Hbase

[plugin ipcluster]
SETUP_CLASS = starcluster.plugins.ipcluster.IPCluster
